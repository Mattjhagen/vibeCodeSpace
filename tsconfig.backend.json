{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["index.ts", "backend/src/**/*.ts"],
  "exclude": ["node_modules", "client", "frontend", "vite.config.js", "postcss.config.js", "tailwind.config.ts"]
}
